#!/usr/bin/env bash

set -euxo pipefail

WORKDIR=$(mktemp --directory)
DOWNLOAD_URL="https://download.beeper.com/linux/appImage/x64"

pushd $WORKDIR
  wget $DOWNLOAD_URL
  mv x64 beeper
  chmod u+x beeper
  mkdir -p $HOME/.local/bin
  mv beeper $HOME/.local/bin
  update-desktop-database $HOME/.local/share/applications
popd

rm -rf $WORKDIR
