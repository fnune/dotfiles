general {
  colors = true
  interval = 1
  separator = "  "
}

order += "tztime pst"
order += "tztime est"
order += "tztime local"

tztime pst {
  format = "PST %H:%M"
  timezone = "US/Pacific"
}

tztime est {
  format = "EST %H:%M"
  timezone = "America/New_York"
}

tztime local {
  format = "🗓️ %Y-%m-%d %H:%M:%S"
}
